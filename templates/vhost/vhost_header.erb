server {
  listen <%= listen_ip %>:<%= listen_port %><% if @listen_options -%> <%= listen_options %><% end -%>;
<%# check to see if ipv6 support exists in the kernel before applying -%>
<% if ipv6_enable == 'true' && (defined? ipaddress6) -%>
  listen [<%= ipv6_listen_ip %>]:<%= ipv6_listen_port %> <% if @ipv6_listen_options -%><%= ipv6_listen_options %><% end -%> ipv6only=on;
<% end -%>
  server_name <%= rewrite_www_to_non_www ? vhost.gsub(/^www\./, '') : server_name.join(" ") %>;
  access_log <%= scope.lookupvar('nginx::params::nx_logdir')%>/<%= vhost %>.access.log;
<%= scope.function_template(['nginx/vhost/_cfg_vhost.erb']) -%>
<% if www_root.to_s != "undef" then -%>
  root  <%= www_root %>;
<% end -%>
<% if index_files.is_a?(Array) and index_files.count > 0 -%>
  index <% index_files.each do |i| -%><%= i -%> <% end -%>;
<% end -%>
