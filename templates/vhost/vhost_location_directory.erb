  location <%= location %> {
<%= scope.function_template(['nginx/vhost/_location_cfg_prepend.erb']) -%>
<% if www_root.to_s != "undef" then -%>
    root  <%= www_root %>;
<% end -%>
<% if try_files.is_a?(Array) and try_files.count > 0 then -%>
    try_files <% try_files.each do |try| -%><%= try %> <% end -%>;
<% end -%>
<% if index_files.is_a?(Array) and index_files.count > 0 -%>
    index <% index_files.each do |i| -%><%= i -%> <% end -%>;
<% end -%>
<%= scope.function_template(['nginx/vhost/_location_cfg_append.erb']) -%>
  }
